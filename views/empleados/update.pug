body#LoginForm
  .container.d-flex.justify-content-center.align-items-center.vh-100
    .bg-white.text-center.p-5.mt-3.center
      .container
        .update-form
          .main-div
            .panel

            block content 
              a(href='/empleados') volver 

              br
              br
              br

              h1 Actualizar Empleado 

              br
              br

              form(action=`/empleados/${emple.id}/update` method='post')
                  .form-group 
                      label(for='id') ID: 
                      input#id.form-control(type='text' name='id' value=emple.id)
                  .form-group
                      label(for='cedula') Cedula: 
                      input#cedula.form-control(type='text' name='cedula' value=emple.cedula)
                  .form-group 
                      label(for='nombre') Nombre: 
                      input#nombre.form-control(type='text' name='nombre' value=emple.nombre)
                  .form-group
                      label(for='apellido') Apellido: 
                      input#apellido.form-control(type='text' name='apellido' value=emple.apellido)
                  .form-group
                      label(for='cargo') Cargo: 
                      input#cargo.form-control(type='text' name='cargo' value=emple.cargo)
                  .form-group
                      label(for='departamento') Departamento: 
                      input#departamento.form-control(type='text' name='departamento' value=emple.departamento)
                  .form-group
                      label(for='ingreso') Ingreso: 
                      input#ingreso.form-control(type='text' name='ingreso' value=emple.ingreso)
                  .form-group
                      label(for='status') Status: 
                      input#status.form-control(type='text' name='status' value=emple.status)
                  br
                  br
                  input.btn.btn-primary(type='submit' value='OK')       